<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_video_profile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="projekt.sqlmulti.AddVideoProfile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Profile Name"
        android:ems="10"
        android:id="@+id/etAddVideoNameProfile"
        android:layout_below="@+id/tvAddVideoProfile"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        android:hint="Speed"
            android:ems="10"
            android:layout_marginTop="19dp"
            android:id="@+id/etAddVideoSpeedProfile"
            android:layout_below="@+id/etAddVideoNameProfile"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
        android:inputType="numberDecimal" />
</android.support.design.widget.TextInputLayout>

    <android.support.v7.widget.SwitchCompat
        android:text="Direction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padd_times_array"
        android:id="@+id/tbDirection"
        android:checked="false"
        android:textColor="@color/fontcolor" />

    <android.support.v7.widget.SwitchCompat
        android:text="High Speed Mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padd_times_array"
        android:id="@+id/swHighSpeed"
        android:checked="false"
        android:textColor="@color/fontcolor" />

    <android.support.v7.widget.SwitchCompat
        android:text="Return Mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padd_times_array"
        android:id="@+id/swReturnMode"
        android:checked="false"
        android:textColor="@color/fontcolor" />

    <Button
        android:text="@string/agree"
        android:background="@color/colorButtonNormal"
        android:layout_width="match_parent"
        android:padding="@dimen/padd_times_array"
        android:layout_height="wrap_content"
        android:id="@+id/btnAgreeAddVideoActivity"
         />

    </LinearLayout>
</ScrollView>